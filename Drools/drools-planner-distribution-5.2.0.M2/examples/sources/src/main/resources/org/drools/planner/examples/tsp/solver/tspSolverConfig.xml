<?xml version="1.0" encoding="UTF-8"?>
<localSearchSolver>
    <!--<environmentMode>DEBUG</environmentMode>-->
    <scoreDrl>/org/drools/planner/examples/tsp/solver/tspScoreRules.drl</scoreDrl>
    <scoreDefinition>
        <scoreDefinitionType>SIMPLE_DOUBLE</scoreDefinitionType>
    </scoreDefinition>
    <startingSolutionInitializerClass>org.drools.planner.examples.tsp.solver.solution.initializer.TspStartingSolutionInitializer</startingSolutionInitializerClass>
    <termination>
        <maximumMinutesSpend>10</maximumMinutesSpend>
    </termination>
    <selector>
        <moveFactoryClass>org.drools.planner.examples.tsp.solver.move.factory.SubTourChangeMoveFactory</moveFactoryClass>
    </selector>
    <acceptor>
        <completeSolutionTabuSize>1000</completeSolutionTabuSize>
        <completePropertyTabuSize>7</completePropertyTabuSize>
    </acceptor>
    <forager>
        <pickEarlyType>NEVER</pickEarlyType>
        <minimalAcceptedSelection>10000</minimalAcceptedSelection>
    </forager>
</localSearchSolver>
